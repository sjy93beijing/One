<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_setting_item"
    >

    <ImageView
        android:id="@+id/iv_movie_icon"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/dimen_10"
        android:scaleType="fitXY"
        android:src="@mipmap/black_swan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:orientation="vertical"
        android:weightSum="1">
<!--电影名字  日期  评分-->

        <TextView
            android:id="@+id/re_hp_title"
            android:textColor="@color/colorPrimary_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="5.2 分"
            android:layout_weight="0.91" />

        <TextView
            android:id="@+id/re_guide_word"
            android:textColor="@color/colorPrimary_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="5.2 分" />

        <!--<TextView-->
            <!--android:id="@+id/re_author_desc"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="作者：" />-->
        <TextView
            android:id="@+id/re_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10" />



        <TextView
            android:id="@+id/re_timelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10" />


    </LinearLayout>
</LinearLayout>